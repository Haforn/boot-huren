<div class="col-2">

	<%= form_tag(:action => 'attempt_login') do %>

		<div class="form-group">
			<%= label_tag(:username) %>
			<%= text_field_tag(:username, nil, class: 'form-control') %>
		</div>

		<div class="form-group">
			<%= label_tag(:password) %>
				<%= password_field_tag(:password, nil, class: 'form-control') %>
		</div>

		<%= submit_tag("Log In", :class => 'btn btn-default') %>
	<% end %>

</div>