<%= form_for user do |f| %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class => 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, :class => 'form-control' %>
	</div>

	<%= f.submit 'Profiel updaten', :class => 'btn btn-default' %>

<% end %>